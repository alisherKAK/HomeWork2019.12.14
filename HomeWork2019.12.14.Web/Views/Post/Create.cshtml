
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form method="post">
    <input type="hidden" value="@ViewBag.Id"/>
    <div class="form-group">
        <input type="file" name="ImagePath" class="form-control">
        <small id="emailHelp" class="form-text text-muted">Select image</small>
    </div>
    <div class="form-group">
        <input type="text" name="Content" class="form-control">
        <small id="emailHelp" class="form-text text-muted">Write post's content</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script src="~/Scripts/PostCreate.js"></script>